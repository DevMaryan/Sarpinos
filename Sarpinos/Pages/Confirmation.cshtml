@page

@model Sarpinos.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}

@section Styles{
    <link href="/css/order.css" rel="stylesheet" />
}

@if (Model.Message == "Thank you for choosing us. Enjoy your meal!")
{
    <div class="confirmation">
        <span class="confirmation-card">
            @Model.Message
        </span>
        <span class="confirmation-sign"><i class="fas fa-utensils fa-4x"></i></span>
    </div>
}
else if (Model.Message == "Hooraay, new menu item is successfully added!")
{
    <div class="confirmation-blue">
        <span class="confirmation-card">
            @Model.Message
        </span>
        <span class="confirmation-sign"><i class="fas fa-plus-circle fa-4x"></i></span>
    </div>
}
else
{
    <div class="confirmation-blue">
        <span class="confirmation-card">
            @Model.Message
        </span>
        <span class="confirmation-sign"><i class="fas fa-rss fa-4x"></i></span>
    </div>
}
