@page

@model Sarpinos.Pages.OrderModel

@{ ViewData["Title"] = "Order"; }

@section Styles{
    <link href="/css/orderform.css" rel="stylesheet" />
}


<form asp-page="Order" method="post" class="order-form">
    <div class="form-group">
        <label asp-for="@Model.Order.Name">Name:</label>
        <input type="text" asp-for="@Model.Order.Name" class="form-control" placeholder="Enter name" />
        <span asp-validation-for="@Model.Order.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Surname">Surname:</label>
        <input type="text" asp-for="@Model.Order.Surname" class="form-control" placeholder="Enter surname" />
        <span asp-validation-for="@Model.Order.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Address">Address:</label>
        <input type="text" asp-for="@Model.Order.Address" class="form-control" placeholder="Enter address" />
        <span asp-validation-for="@Model.Order.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Phone">Phone:</label>
        <input type="text" asp-for="@Model.Order.Phone" class="form-control" placeholder="Enter phone" />
        <span asp-validation-for="@Model.Order.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Message">Message:</label>
        <textarea asp-for="@Model.Order.Message" class="form-control" placeholder="Enter message"></textarea>
        <span asp-validation-for="@Model.Order.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="submit-kopce">Order</button>
</form>

<div style="background-color:#f2f2f2;margin:0 auto; margin-top:40px; padding:20px; width:400px;border-radius:3px;">
    <form asp-page="Order" asp-page-handler="Subscribe" method="post">
        <h3>Subscribe</h3>
        <span class="form-text text-muted">We'll never share your email with anyone else.</span>
        <div class="form-group">
            <input class="form-control" type="email" name="email" id="subscriptionEmail" placeholder="Enter email" required />
        </div>
        <button type="submit" class="btn btn-primary">Subscribe</button>
    </form>
</div>
