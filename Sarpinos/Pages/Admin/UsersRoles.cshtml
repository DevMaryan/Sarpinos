@page
@model Sarpinos.Pages.Admin.UsersRoles
@{
    ViewData["Title"] = "Users";
}

@using Microsoft.AspNetCore.Identity
@using Sarpinos.Models


@inject RoleManager<IdentityRole> roleManager

<div class="container d-flex justify-content-md-center">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr class="bg-dark text-light">
                <td>Id</td>
                <td>Name</td>
                <td>NormalizedName</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Roles.Count > 0)
            {
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.NormalizedName</td>
                        <td><a asp-page-handler="DeleteRole" asp-route-RoleId="@role.Id"><i class="fas fa-trash-alt fa-2x text-danger"></i></a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No Roles Available</td>
                </tr>
            }

        </tbody>
    </table>
</div>