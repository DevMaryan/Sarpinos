@page
@model Sarpinos.Pages.Admin.DoneOrders
@{ ViewData["Title"] = "Orders list"; }


<h1 class="btn btn-primary">
    Orders <span class="badge badge-light">@Model.OrdersList.Count</span>
</h1>



<table class="table table-hover">
    <thead>
        <tr class="bg-dark text-light">
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Phone
            </th>
            <th>
                Address
            </th>
            <th>
                Message
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.OrdersList)
        {
            <tr>
                <td>@order.Name</td>
                <td>@order.Surname</td>
                <td>@order.Phone</td>
                <td>@order.Address</td>
                <td>@order.Message</td>

                @if (order.Status == Models.OrderStatus.Done)
                 {
                                        <td class="text-success">Order Done</td>
                 }
            </tr>
        }
    </tbody>
</table>