@page
@model Sarpinos.Pages.Admin.MenuItemListModel
@{
    ViewData["Title"] = "Menu List";
}

<a class="btn btn-outline-primary" asp-page="CreateMenuItem">New Menu Item</a>
<br />
<div class="container m-2">
    <table class="table table-hover ">
        <thead class="thead-dark">
            <tr class="bg-dark text-light">
                <td>Id</td>
                <td>Name</td>
                <td>Image</td>
                <td>Price</td>
                <td>Date Created</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuList)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@item.ImageUrl"  style="width:40px;height:40px;border-radius:3px;object-fit:cover;"/></td>
                <td>$ @item.Price</td>
                <td>@item.DateCreated</td>
                <td><a asp-page="UpdateMenuItem" asp-route-id="@item.Id"><i class="fas fa-pen-square fa-2x text-success"></i></a></td>
                <td><a asp-page-handler="DeleteMenuItem" asp-route-itemId="@item.Id"><i class="fas fa-trash-alt fa-2x text-danger"></i></a></td>
            </tr>

            }

        </tbody>
    </table>

</div>
