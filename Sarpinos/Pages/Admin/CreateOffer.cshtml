@page
@model Sarpinos.Pages.Admin.CreateOfferModel

@{
    ViewData["Title"] = "Create Offer";
}

<div class="container">
    <form asp-page="CreateOffer" method="POST">
        <div class="form-group">
            <label asp-for="@Model.Offer.Title">Title:</label>
            <input type="text" asp-for="@Model.Offer.Title" class="form-control" placeholder="Enter title" />
            <span asp-validation-for="@Model.Offer.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Offer.ImageUrl">Image:</label>
            <input type="text" asp-for="@Model.Offer.ImageUrl" class="form-control" placeholder="Enter image" />
            <span asp-validation-for="@Model.Offer.ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Offer.Description">Description:</label>
            <input type="text" asp-for="@Model.Offer.Description" class="form-control" placeholder="Enter description" />
            <span asp-validation-for="@Model.Offer.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Offer.ValidTo">Valid To:</label>
            <input type="date" asp-for="@Model.Offer.ValidTo" class="form-control" placeholder="Valid To dd/MM/yyyy" />
            <span asp-validation-for="@Model.Offer.ValidTo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>

</div>
