@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="carouselExampleIndicators" class="carousel slide" style="height:300px;" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="height:300px;">
        <div class="carousel-item active">
            <img src="https://wallpaperaccess.com/full/462773.jpg" class="d-block w-100" style="height: 300px; object-fit: cover">
        </div>
        <div class="carousel-item">
            <img src="https://wallpaperaccess.com/full/866645.jpg" class="d-block w-100" style="height: 300px; object-fit: cover">
        </div>
        <div class="carousel-item">
            <img src="https://i.ytimg.com/vi/BIfj_7WixMw/maxresdefault.jpg" class="d-block w-100" style="height: 300px; object-fit: cover">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="row justify-content-evenly ">
    @foreach (var offer in Model.Offers)
    {
        <div class="card-deck m-2">
            <div class="card shadow-sm" style="width:300px;">
                <img src="@offer.ImageUrl" class="card-img-top" style="height:120px;width:100%;object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@offer.Title</h5>
                    <p class="card-text">COUPON</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Valid to: @offer.ValidTo.ToString("dd-MM-yyyy")</small>
                </div>
            </div>

        </div>
    }
</div>

